---
interface HeroProps {
  name?: string;
  position?: string;
  role?: string;
}
const { name, position, role }: HeroProps = Astro.props;
---

<section class="w-full flex flex-col items-center justify-center">
  <h1 class="text-5xl font-bold">{name}</h1>
  <h2 class="text-2xl font-semibold">{position}</h2>
  <h3 class="text-lg font-medium">{role}</h3>
</section>
